<h1>Admin::Questions#index</h1>
<p>Find me in app/views/admin/questions/index.html.erb</p>

<ul>
  <li><%= link_to "全て", root_path %></li>
</ul>
<ul>
  <li><%= link_to "未解決", unsolved_questions_path %></li>
</ul>
<ul>
  <li><%= link_to "解決", solved_questions_path %></li>
</ul>

<ul>
  <% @questions.each do |question| %>
    <li>
      <%= question.user.name %>
    </li>
    <li>
      <%= question.title %>
      <% if question.solved %>
        <span>解決済み</span>
      <% else %>
        <span>未解決</span>
      <% end %>
    </li>
    <li>
      <%= simple_format(question.body) %>
    </li>
    <li>
      <%= link_to "回答を見る", question %>
    </li>
    <li>
      <%= link_to "質問削除", admin_question_path(question), method: :delete, data: {confirm: "質問を削除します"} %>
    </li>
  <% end %>
  <%= paginate @questions %>
</ul>